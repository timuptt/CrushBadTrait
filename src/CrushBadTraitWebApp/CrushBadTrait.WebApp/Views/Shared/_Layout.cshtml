<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - CrushBadTrait</title>
    <link rel="icon" href="~/img/favicon-16x16.png"/>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/minty.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/CrushBadTraitWebApp.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/lib/fontawesome-free-6.2.0-web/css/all.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <div class="d-flex align-items-center">
                <img class="mx-3" src="img/favicon-32x32.png"/>
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CrushBadTrait</a>
            </div>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex">
                <ul class="navbar-nav flex-grow-1">
                    @if ((bool)User.Identity?.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="TraitCatalog" asp-action="Index">Trait Catalog</a>
                        </li>
                        <li class="nav-item ms-auto">
                            <a class="btn btn-outline-dark" asp-area="" asp-controller="User" asp-action="Profile"><span class="fa fa-user"></span></a>
                        </li>
                        <li class="nav-item ms-2">
                            <a class="btn btn-outline-danger " asp-controller="Account" asp-action="Logout"><span class="fa fa-sign-out me-1"></span>Sign out</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item ms-auto">
                            <a class="btn btn-outline-primary" asp-controller="Account" asp-action="Login">Sign in</a>
                        </li>
                    }
                </ul>

            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2022 - CrushBadTrait - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/lib/fontawesome-free-6.2.0-web/js/all.js"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>