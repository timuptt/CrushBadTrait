@model CrushBadTrait.WebApp.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}
<div class="row text-center mx-auto">
    <div class="col-md-6 offset-3">
        <div class="mx-auto mb-5">
            <h4>Please log in</h4>
        </div>
        @if(TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Sorry!</b> - @TempData["Error"]</span>
            </div>
        }
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Login">
                    <div>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group mb-3">
                            <input asp-for="Email" class="form-control" placeholder="E-mail">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <input asp-for="Password" class="form-control" placeholder="Password"/>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group text-center">
                        <input class="btn btn-primary" type="submit" value="Sing In"/>
                        <a class="btn btn-outline-secondary" asp-action="Register" >Sign Up</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
