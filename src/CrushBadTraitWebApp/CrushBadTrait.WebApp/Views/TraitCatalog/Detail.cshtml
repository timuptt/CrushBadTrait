@model CrushBadTrait.WebApp.ViewModels.TraitViewModel
@{
    ViewData["Title"] = @Model.Name;
}
<!DOCTYPE html>

<html>
<body>
<button class="btn btn-outline-primary mb-3">
    <span class="fa fa-arrow-left"></span>
    Back
</button>
<div class="col-mb-8">
    <div class="row justify-content-center">
        <div class="card mb-4 box-shadow border-primary">
            <div class="card-body">
                <div class="card-header d-flex align-items-center">
                    <span class="fa-solid fa-quote-left me-3 text-secondary"></span>
                    <p class="card-text text-dark">@Model.Name</p>
                </div>
                <p class="card-text">@Model.Description</p>
                <p class="card-text">Day reports:</p>
                <div class="row">
                    @foreach (var day in @Model.DayReports)
                    {
                        <div class="col-md-3">
                            <div class="card mb-4 box-shadow border-secondary">
                                <div class="card-body">
                                    <div class="card-header d-flex justify-content-between align-items-center">
                                        <span class="fa fa-calendar-days text-primary"></span>
                                        <p class="card-text">@day.Date.ToShortDateString()</p>
                                    </div>
                                    <div class="card-text d-flex justify-content-between align-items-center">
                                        <span class="fa fa-pen-alt m-3 text-primary"></span>
                                        <p class="card-text me-3">@day.Note</p>
                                    </div>
                                    <div class="card-text d-flex align-items-center justify-content-between">
                                        <div class="d-flex align-items-center m-3">
                                            <span class="fa fa-clock me-1 text-primary"></span>
                                            <p class="card-text">Periodicity</p>
                                        </div>
                                        <p class="card-text me-3"> @day.Periodicity time</p>
                                    </div>
                                    <div class="card-text d-flex align-items-center justify-content-between">
                                        <div class="d-flex align-items-center m-3">
                                            <span class="fa fa-award me-1 text-primary"></span>
                                            <p class="card-text">Grade</p>
                                        </div>
                                        <p class="card-text me-3"> @day.Grade</p>
                                    </div>
                                    
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>